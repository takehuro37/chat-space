.message
  .message__upper-info
    .message__upper-info__talker
      = message.user.name
    .message__upper-info__date
      = message.user.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__text
    - if message.content.present?
      %p.message__text__image
        = message.content
    = image_tag message.image.url, class: 'message__text__image' if message.image.present?
